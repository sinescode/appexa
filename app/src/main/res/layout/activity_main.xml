<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram Username Checker"
                android:textSize="24sp"
                android:textColor="#4F46E5"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_instagram"
                android:drawablePadding="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check many usernames quickly — optimized for mobile"
                android:textSize="12sp"
                android:textColor="#6B7280" />
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/tab_background"
            android:padding="4dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnFile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload File"
                android:backgroundTint="#EEF2FF"
                android:textColor="#4F46E5"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_file"
                android:drawablePadding="4dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:id="@+id/btnText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter Text"
                android:backgroundTint="#F3F4F6"
                android:textColor="#6B7280"
                android:drawableStart="@drawable/ic_keyboard"
                android:drawablePadding="4dp"
                style="@style/Widget.AppCompat.Button.Borderless" />
        </LinearLayout>

        <!-- File Section -->
        <LinearLayout
            android:id="@+id/fileSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/section_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload a file"
                android:textSize="18sp"
                android:textColor="#4F46E5"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_file_import"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JSON or TXT — one username per line (or an array in JSON)."
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/pickFileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select file..."
                android:backgroundTint="#EEF2FF"
                android:textColor="#4F46E5"
                android:drawableStart="@drawable/ic_upload"
                android:drawablePadding="4dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:id="@+id/startFileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Checking"
                android:backgroundTint="#DC2626"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="4dp" />
        </LinearLayout>

        <!-- Text Section -->
        <LinearLayout
            android:id="@+id/textSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/section_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Usernames"
                android:textSize="18sp"
                android:textColor="#4F46E5"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_keyboard"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One username per line."
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/edittext_background"
                android:padding="16dp"
                android:hint="user1\nuser2\n..."
                android:gravity="top" />

            <Button
                android:id="@+id/startTextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Checking"
                android:backgroundTint="#DC2626"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="4dp" />
        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:id="@+id/progressSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/section_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress"
                android:textSize="18sp"
                android:textColor="#4F46E5"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_chart"
                android:drawablePadding="8dp"
                android:layout_marginBottom="16dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="0"
                android:progressTint="#16A34A"
                android:backgroundTint="#E5E7EB" />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Processed: 0/0 (0%)"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp" />

            <!-- Stats Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="1"
                android:layout_marginTop="16dp">

                <!-- Active Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/stat_background_active"
                    android:padding="12dp"
                    android:layout_margin="4dp">

                    <TextView
                        android:id="@+id/activeCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#DC2626"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_user_check"
                            android:tint="#6B7280"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textSize="10sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Available Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/stat_background_available"
                    android:padding="12dp"
                    android:layout_margin="4dp">

                    <TextView
                        android:id="@+id/availableCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#059669"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_user_plus"
                            android:tint="#6B7280"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available"
                            android:textSize="10sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Error Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/stat_background_error"
                    android:padding="12dp"
                    android:layout_margin="4dp">

                    <TextView
                        android:id="@+id/errorCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#D97706"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_warning"
                            android:tint="#6B7280"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Error"
                            android:textSize="10sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Total Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/stat_background_total"
                    android:padding="12dp"
                    android:layout_margin="4dp">

                    <TextView
                        android:id="@+id/totalCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_list"
                            android:tint="#6B7280"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textSize="10sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </LinearLayout>
            </GridLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:backgroundTint="#DC2626"
                    android:textColor="#FFFFFF"
                    android:drawableStart="@drawable/ic_cancel"
                    android:drawablePadding="4dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/downloadButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Download"
                    android:backgroundTint="#059669"
                    android:textColor="#FFFFFF"
                    android:drawableStart="@drawable/ic_download"
                    android:drawablePadding="4dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Results Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/section_background"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Results"
                android:textSize="18sp"
                android:textColor="#4F46E5"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_list_check"
                android:drawablePadding="8dp"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/resultsRecycler"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>